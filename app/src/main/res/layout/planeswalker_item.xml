<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/card_top"
        android:ellipsize="end"
        android:gravity="bottom|center_horizontal"
        android:lines="1"
        android:paddingBottom="5dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="@string/txt_planeswalker"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:background="@drawable/card_bottom"
        android:gravity="top|center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_increase_life"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@null"
                android:padding="4dp"
                android:src="@drawable/picker_life_plus" />

            <TextView
                android:id="@+id/txt_life_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/btn_decrease_life"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@null"
                android:padding="4dp"
                android:src="@drawable/picker_life_minus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/btn_increase_poison"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@null"
                android:padding="4dp"
                android:src="@drawable/picker_poison_plus" />

            <TextView
                android:id="@+id/txt_poison_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/btn_decrease_poison"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@null"
                android:padding="4dp"
                android:src="@drawable/picker_poison_minus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/btn_increase_energy"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@null"
                android:padding="4dp"
                android:src="@drawable/picker_energy_plus" />

            <TextView
                android:id="@+id/txt_energy_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/black" />

            <ImageView
                android:id="@+id/btn_decrease_energy"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@null"
                android:padding="4dp"
                android:src="@drawable/picker_energy_minus" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>